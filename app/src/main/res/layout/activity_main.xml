<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingLeft="18dp"
        android:paddingRight="18dp"
        android:paddingBottom="30dp"
        android:paddingTop="30dp">

        <Button
            android:id="@+id/bt_bit_operations"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="java位运算" />

        <Button
            android:id="@+id/bt_collection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="java集合基础" />

        <Button
            android:id="@+id/bt_Queue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="java队列特写" />

        <Button
            android:id="@+id/bt_reflection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="java反射" />

        <Button
            android:id="@+id/bt_generic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="java泛型" />

        <Button
            android:id="@+id/bt_annotation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Java注解类型(@Annotation)" />

        <Button
            android:id="@+id/bt_annotation_Processor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Java注解处理器(@Annotation)" />

        <Button
            android:id="@+id/bt_classloader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Java类加载器(ClassLoader)" />

        <Button
            android:id="@+id/bt_cas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="无锁CAS与Unsafe类"
            android:visibility="gone"/>
        <Button
            android:id="@+id/bt_Atomic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="原子操作类(Atomic系列)"
              />

    </LinearLayout>
</ScrollView>

